<p id="notice"><%= notice %></p>

<div class="row-fluid">
  <div class="span9">
    <%= image_tag(@obra.picture_url, :width => "100%") if @obra.picture.present? %>
    

  </div>

  <div class="span3">
    <p><b>Modelo: </b><%= @obra.modelo %></p>
    <p><b>Material: </b><%= @obra.material %></p>
    <p><b>Valor: </b><%= @obra.valor %></p>
    <p>
      <%= link_to 'Editar', edit_obra_path(@idea), :class =>"linkcolor"  %> |
      <%= link_to 'Apagar', @obra, confirm: 'Are you sure?', method: :delete, :class =>"linkcolor" %> |
      <%= link_to 'Voltar', obras_path, :class =>"linkcolor" %>
    </p>
  </div>
</div>
</div>
